@{
    ViewBag.Title = "Index";
}
<br />
<h2>RSS Feed Reader</h2>
<hr />
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Source</th>
            <th>Publish Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.RSSFeed)
        {
            <tr>
                <td>@item.Title</td>
                <td><a href="@item.Source">Read Here</a></td>
                <td>@item.PubDate.ToString("dd-MM-yyyy")</td>
            </tr>

        }
    </tbody>
</table> 