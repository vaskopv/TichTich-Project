@{
    ViewData["Title"] = "News Feed";
}
<br />
<h2>RSS Feed Reader</h2>
<hr />
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Source</th>
            <th>Title</th>
            <th>Link</th>
            <th>Publish Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td><img src="@item.ImageUrl" width="100" class="mr-3" alt="@item.Source"></td>
            <td>@item.Title</td>
            <td><a href="@item.Source">Read Here</a></td>
            <td>@item.PubDate.ToString("dd-MM-yyyy")</td>
        </tr>

        }
    </tbody>
</table> 