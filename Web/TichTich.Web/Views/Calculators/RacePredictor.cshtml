@{
    this.ViewData["Title"] = "Race Predictor";
}
<style>
    img {
        width: 100%;
        height: auto;
    }
</style>

<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <section>
                <div style="margin-bottom:10px">
                    <div class="infobox_standard infobox_style2" style="text-align:center">
                        <h2>Get a prediction</h2><br>
                        Enter your half marathon time here to get a prediction for your marathon
                        <br><br><br>
                        <form method="post" action="" class="form">

                            Hr <input id="hours" type="text" placeholder="0-4" name="hours" style="width:40px">&nbsp;&nbsp;
                            Min <input id="minutes" type="text" placeholder="0-60" name="minutes" style="width:40px">&nbsp;&nbsp;
                            Sec <input id="seconds" type="text" placeholder="0-60" name="seconds" style="width:40px">
                            <br><br><br>
                            <input class="button" type="submit" onclick="validate()" value="Predict my time">
                            <br><br><br>
                            <h4>Result:</h4>
                            <h3>@ViewBag.Result</h3>
                        </form>
                    </div>
                </div>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <img src="~/images/stopwatch.jpg" alt="stopwatch" class="img-responsive" />
        </section>
    </div>
</div>

<script>
    function validate() {
        var hours = document.getElementById('hours').value;
        var minutes = document.getElementById('minutes').value;
        var seconds = document.getElementById('seconds').value;

        if (hours < 0 || hours > 4 || minutes < 0
            || minutes > 60 || seconds < 0 || seconds > 60
            || hours === "" || seconds === "" || minutes === "") {
            alert('Please enter valid time.');
            return false;
        }
        return true;
    }
</script>
