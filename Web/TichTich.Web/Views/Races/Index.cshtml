<head>
    @{
        this.ViewData["Title"] = "Races";
    }
</head>


<br />
<h2>Races</h2>
<br />
<br />

<div >
    <table id="races" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Participants</th>
                <th>Distance</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.RacersCount</td>
                    <td>@item.Distance</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "ById", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#races').DataTable({
                "pagingType": "simple_numbers"
            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}
