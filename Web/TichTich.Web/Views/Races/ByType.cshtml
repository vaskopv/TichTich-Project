@model TichTich.Web.ViewModels.Races.ByTypeViewModel
@using TichTich.Common;
@{
    this.ViewData["Title"] = $"{@Model.TerrainType} Race";
}

<h1>List of @Model.TerrainType Races!</h1>

@foreach (var race in Model.Races)
{
    <div class="card" style="width: 22rem;">
        <div class="card-body">
            <h5 class="card-title">@race.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@race.OrganizerName</h6>
            <p class="card-text">@race.Description</p>
           
            @if (this.User.IsInRole(GlobalConstants.RacerRoleName))
            {
                <div class="btn-group mb-4" role="group" aria-label="racer options">
                    <a href="#" type="button" class="btn btn-success">View Race</a>
                    <a type="button" href="#" class="btn btn-primary">Participate</a>
                </div>
            }
            else
            {
                <div class="btn-group mb-4" role="group" aria-label="organizer options">
                    <a href="#" type="button" class="btn btn-success">View Race</a>
                    <a type="button" href="#" class="btn btn-primary">Edit Race</a>
                    <a type="button" href="#" class="btn btn-danger">Delete Race</a>
                </div>
            }

        </div>
    </div>
}
