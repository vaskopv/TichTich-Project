@{
    this.ViewData["Title"] = "News Feed";
}

<table class="table table-striped table-bordered" style="width:auto" align="center">
    <thead>
        <tr>
            <th>
                Racer Name
            </th>
            <th>
                Finish Time
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RacerName</td>
            <td> Enter Time: <input onsubmit="validate()" id="finishtime" type="text" placeholder="hh:mm:ss" name="finishtime" style="width:150px"></td>
        </tr>
    }


</table>

<script>
    function validate() {
        var finishTime = document.getElementById('finishtime').value;
        var timeRegEx = /^(?:(?:([01]?\d|2[0-3]):)?([0-5]?\d):)?([0-5]?\d)$/;
        var result = timeRegEx.test(finishTime);
        if (result == false) {
            alert('Please enter valid time.');
            return false;
        }
        return true;
    }
</script>